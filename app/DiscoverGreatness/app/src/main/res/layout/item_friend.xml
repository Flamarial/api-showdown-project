<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_view_margin_half"
        android:layout_marginBottom="@dimen/card_view_margin_half"
        android:layout_marginLeft="@dimen/card_view_margin"
        android:layout_marginRight="@dimen/card_view_margin"
        app:cardElevation="@dimen/card_view_elevation"
        app:cardCornerRadius="@dimen/card_view_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/friendPicture"
                android:layout_width="@dimen/friend_image_size"
                android:layout_height="@dimen/friend_image_size"
                android:layout_margin="@dimen/friend_item_padding"
                android:background="@color/discover_orange"
                android:scaleType="center"
                android:src="@drawable/ic_account" />

            <ImageView
                android:layout_width="@dimen/friend_image_size"
                android:layout_height="@dimen/friend_image_size"
                android:layout_alignTop="@+id/friendPicture"
                android:layout_alignBottom="@+id/friendPicture"
                android:layout_alignLeft="@+id/friendPicture"
                android:layout_alignRight="@+id/friendPicture"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/friendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/friendPicture"
                android:layout_marginTop="@dimen/friend_item_padding"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>