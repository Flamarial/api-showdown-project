<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/discover_orange"
    android:id="@+id/drawerLayout"
    tools:context="com.apishowdown.discovergreatness.MainActivity">

    <!-- The main content view -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
            android:id="@+id/coverflow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:coverHeight="@dimen/credit_card_height"
            app:coverWidth="@dimen/credit_card_width"
            app:maxScaleFactor="1.5"
            app:reflectionGap="0px"
            app:rotationThreshold="0.5"
            app:scalingThreshold="0.5"
            app:spacing="0.575" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/actionBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:theme="@style/PalActionBarTheme" />

    </FrameLayout>

    <!-- The navigation drawer -->
    <include layout="@layout/layout_drawer" />

</android.support.v4.widget.DrawerLayout>
